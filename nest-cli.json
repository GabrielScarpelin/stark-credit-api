{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.py"
      },
      {
        "include": "**/*.pkl"
      },
      {
        "include": "**/*.csv"
      }
    ],
    "watchAssets": true
  }
}
